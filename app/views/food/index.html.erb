<h1>Food Selection</h1>

<table> 
    <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    <% @foods.all.each do |food| %>
        <tr>
            <td><%= link_to food.name, :onclick => add, :id => food.id%></td>
            <td><%= food.price %></td>
            <td><%= food.quantity %></td>
        </tr>
    <% end %>
</table>
<br>
<%= link_to '<button type="button">Check Out</button>'.html_safe, receipt_index_path%>